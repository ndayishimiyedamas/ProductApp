@page
@model CommerceApp.Pages_Commerces.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Commerce</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Commerce.Id" />
            <div class="form-group">
                <label asp-for="Commerce.Name" class="control-label"></label>
                <input asp-for="Commerce.Name" class="form-control" />
                <span asp-validation-for="Commerce.Name" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Commerce.Description" class="control-label"></label>
                <input asp-for="Commerce.Description" class="form-control" />
                <span asp-validation-for="Commerce.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Commerce.Image" class="control-label"></label>
                <input asp-for="Commerce.Image" class="form-control" />
                <span asp-validation-for="Commerce.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Commerce.Price" class="control-label"></label>
                <input asp-for="Commerce.Price" class="form-control" />
                <span asp-validation-for="Commerce.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
